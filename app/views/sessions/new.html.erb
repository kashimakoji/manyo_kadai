<h1>ログイン</h1>
<%= form_with(scope: :session, url: sessions_path, local: true ) do |f| %>
  <%= f.label :email, (t 'sessions.new.email') %>
  <%= f.email_field :email %>

  <%= f.label :password, (t 'sessions.new.password')%>
  <%= f.password_field :password %>

  <%= f.submit "ログインする", class: 'btn btn-primary' %>
<% end %>
